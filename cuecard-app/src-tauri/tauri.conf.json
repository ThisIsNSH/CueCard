{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CueCard",
  "version": "0.1.0",
  "identifier": "com.cuecard.app",
  "build": {
    "frontendDist": "../src"
  },  
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CueCard",
        "width": 450,
        "height": 300,
        "resizable": true,
        "minWidth": 450,
        "minHeight": 300,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": true,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": true,
        "focus": false,
        "acceptFirstMouse": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Speaker notes for presentations, meetings, and even dates — visible only to you.",
    "longDescription": "Speaker notes for presentations, meetings, and even dates — visible only to you.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
